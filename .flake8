[flake8]
# C408: Unnecessary dict call - this form is more readable for pydantic models copy updates
# N805: first argument of a method should be named 'self' - but flake is not recognizing pydantic validators
# W503: PEP8 suggests to use line break before operator in new code
# E203: PEP8 suggests to leave an equal amount of space on either side of : in slice
ignore = C408,N805,W503,E203

# black default value, explanation below:
# "This number was found to produce significantly shorter files than
# sticking with 80 (the most popular), or even 79 (used by the standard library).
# In general, 90-ish seems like the wise choice."
max-line-length = 100


max-cognitive-complexity = 7

exclude =
    .venv

per-file-ignores =
    # No docs, requests timeout, annotation and line length required for tests. Enable hard-coded password
    test*.py: D10, D101, D103, S101, ANN, E501, S113, S106
    # Skip unused imports in init files
    __init__.py: F401
